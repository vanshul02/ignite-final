      font-size: 25px;
      letter-spacing: 3px;
      transition: color ease-in 0.3s;
    }

    .record:hover {
      cursor: default;
      color: crimson;
    }

    p {
      font-size: 18px;
      font-family: "D-DIN Condensed";
      font-weight: normal;
      color: white;
      line-height: 140%;
      padding: 0 15%;
      letter-spacing: 0.8px;
