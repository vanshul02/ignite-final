    .nav {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .lnav {
      margin-left: 0px;
      padding: 0px;
    }

    .rnav {
      margin: 0;
      padding: 0px;
    }

    .dp {
      position: absolute;
      top: 15px;
      right: 100px;
    }

    ul.navb {
      display: flex;
      flex-direction: row;
      color: white;
      font-size: small;
      font-family: Arial;
    }

    li {
      margin-right: 25px;
      transition: color ease-in 0.3s;
    }

    li a {
      color: white;
      text-decoration: none;
    }

    li a:hover {
      color: crimson;
    }

    li:hover {
      cursor: pointer;
      border-bottom: 2px solid crimson;
      color: crimson;
    }

    .recordrow {
      display: flex;
    }

    .recordrow {
      background: linear-gradient(to bottom, #ff6464 0%, #ff3a3a 100%);
      padding: 3% 0;
      margin: 0;
      width: 80%;
      position: absolute;
      top: 110%;
      left: 10%;
      height: 30px;
      border-radius: 10px;
      display: flex;
      flex-direction: row;
      justify-content: space-around;
    }

    .record {
      color: white;
      font-size: 25px;
      letter-spacing: 3px;
      transition: color ease-in 0.3s;
    }

    .record:hover {
      cursor: default;
      color: crimson;
    }

    p {
      font-size: 18px;
      font-family: "D-DIN Condensed";
      font-weight: normal;
      color: white;
      line-height: 140%;
      padding: 0 15%;
      letter-spacing: 0.8px;
    }
  </style>
</head>

